[colors]
    background = ${xrdb:color0:#222}
    ;background = #222
    background-alt = #444
    ;foreground = #dfdfdf
    foreground = #c4b7c5
    foreground-alt = #555
    primary = #ffb52a
    secondary = #e60053
    alert = #bd2c40

[global/wm]
    margin-top = 0
    margin-bottom = 0
    margin-left = 0

[bar/top]
    monitor = ${env:MONITOR:}
    width = 100%
    height = 30
    offset-x = 0
    offset-y = 0
    radius = 6.0
    fixed-center = true

    background = ${colors.background}
    foreground = ${colors.foreground}

    line-size = 2
    line-color = #f00

    border-size = 1
    border-color = #00000000

    padding = 0

    module-margin-left = 1
    module-margin-right = 0

    font-0 = DejaVuSansMono Nerd Font:size=10:weight=bold;3
    font-1 = RobotoMono Nerd Font:size=10:weight=bold;3
    font-2 = Koruri,Koruri Light:size=10;3

    modules-left = i3 xwindow
    modules-center = spotify
    modules-right = volume memory cpu wlan battery date time powermenu

    tray-position = center
    tray-background = ${colors.background}
    override-redirect = true
    wm-restack = i3
    tray-offset-x = -325


    cursor-click = pointer
    cursor-scroll = ns-resize

