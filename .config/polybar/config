[module/cpu]
    type = internal/cpu
    interval = 2
    format-prefix = ""
    format-prefix-foreground = #95B47B
    ;format-underline = #f90000
    label = %percentage%%
    label-padding = 1

[module/memory]
    type = internal/memory
    interval = 1
    format-prefix = ""
    format-prefix-foreground = #B06A58
    ;format-underline = #4bffdc
    label = %percentage_used%%
    label-padding = 1

[module/wlan]
    type = internal/network
    interface = wlp2s0
    interval = 3.0

    format-connected = " <label-connected>"
    label-connected = %essid:0:8:...%
    format-connected-foreground = #566CA9
    format-disconnected = 
    format-disconnected-foreground = #C13416

[module/eth]
    type = internal/network
    interface = enp62s0u1u2
    interval = 3.0
    
    format-connected = <label-connected>
    format-connected-prefix = 
    format-connected-prefix-foreground = #566CA9
    label-connected = Ethernet

    format-disconnected =
    ;format-disconnected = <label-disconnected>
    ;format-disconnected-underline = ${self.format-connected-underline}
    ;label-disconnected = %ifname% disconnected
    ;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
    type = internal/date
    interval = 5

    date = "%d/%m-%Y"
    date-alt = "%Y-%m-%d"

    time = %H:%M
    time-alt = %H:%M

    format-prefix = ""
    format-prefix-foreground = #e5c078
    ;format-underline = #0a6cf5

    label = %date%
    label-padding = 1

[module/time]
    type = internal/date
    interval = 5

    time = %H:%M
    format-prefix = ""
    format-prefix-foreground = #7B5E8D
    label = %time%
    label-padding = 1

[module/volume]
    type = internal/pulseaudio

    format-volume = <ramp-volume> <label-volume>
    label-volume-foreground = ${root.foreground}
